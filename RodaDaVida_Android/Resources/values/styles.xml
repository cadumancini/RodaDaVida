<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="MyTheme.Base">

  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary: cor da barra -->
    <item name="colorPrimary">#2196F3</item>
    <!-- colorPrimaryDark: cor mais escura, pra statusbar -->
    <item name="colorPrimaryDark">#1565C0</item>
    <item name="android:statusBarColor">#1565C0</item>
    <!-- colorAccent: cor dos widgets (cursor, FAB's, toggles, etc) -->
    <item name="colorAccent">#01579B</item>
    <!-- colorControlHighlight: cor quando seleciona um widget -->
    <item name="colorControlHighlight">#E3F2FD</item>
  	<!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
  </style>
</resources>