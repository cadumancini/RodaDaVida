<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ListView
        android:id="@+id/NotasList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <rodadavidaandroid.views.CirculoTeste
        android:id="@+id/Circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="Nova Tarefa"
        android:id="@+id/btnNovaTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_gravity="center" />
    <TextView
        android:text="PrÃ³ximas Tarefas:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/txtProximasTarefas" />
    <ListView
        android:id="@+id/ProximasTarefasList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Todas as Tarefas"
        android:id="@+id/btnTodasTarefas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_gravity="center" />
</LinearLayout>